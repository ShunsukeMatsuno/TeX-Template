%%%%%%%%%%%%% Presentation Scripts %%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% font
\RequirePackage{fontspec}
\setmainfont{Libertinus Sans}

% doc
\RequirePackage[onehalfspacing]{setspace}   % ! `onehalfspacing` or 'doublespacing'
\RequirePackage{parskip}
\RequirePackage{geometry}
\RequirePackage{microtype}    % better spacing

% margin
% \geometry{left=50mm,right=25mm,top=30mm,bottom=30mm}
\geometry{top=2cm, bottom=3cm, left=3.5cm, right=2cm, heightrounded,
marginparwidth=3cm, marginparsep=5mm}
\setlength{\skip\footins}{1cm}

% counter
\newcounter{slide}
\setcounter{slide}{-1}
\newcommand\slide{\stepcounter{slide} Slide \theslide}

% note
\RequirePackage{marginnote}    % note in margin
\reversemarginpar
\newcommand{\slidenote}[1]{\marginnote{\blue{\slide} \\ \textcolor{gray}{#1}}[.32cm]}

% color
\RequirePackage{xcolor}
\definecolor{lblue}{RGB}{0, 114, 206}
\newcommand{\bb}[1]{\textbf{\textcolor{lblue}{#1}}}
\newcommand{\blue}[1]{\textcolor{lblue}{#1}}
\newcommand{\red}[1]{\textbf{\textcolor{red}{#1}}}
\newcommand{\gray}[1]{\textcolor{darkgray}{{\small #1}}}

% misc
\RequirePackage{lipsum}
