  \large \lineskip 0.5em%
  \begin{tabular}[t]{c}%
}
\postauthor{\end{tabular}\par\end{center}\vskip 1.2em}
\predate{\begin{center}\large}
\postdate{\par\end{center}\vskip 1.5em}

